@article{ ISI:000446321000006,
Author = {Lim, Michelle M. L. and Jorgensen, Peter Sogaard and Wyborn, Carina A.},
Title = {{Reframing the sustainable development goals to achieve sustainable
   development in the Anthropocene-a systems approach}},
