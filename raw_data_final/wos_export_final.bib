@article{ ISI:000451362200030,
Author = {Silvestre, Bruno S. and Tirca, Diana Mihaela},
Title = {{Innovations for sustainable development: Moving toward a sustainable
   future}},
Journal = {{JOURNAL OF CLEANER PRODUCTION}},
Year = {{2019}},
Volume = {{208}},
Pages = {{325-332}},
Month = {{JAN 20}},
Abstract = {{The view that innovation is a key driver for sustainability is widely
   accepted among scholars, industry professionals, and government
   representatives. This is due to the fact that sustainable development is
   a pressing issue that requires immediate action and changes from
   governments, industry, and society as whole. This article reviews the
   literature on innovations that can lead to transformations in
   individuals, organizations, supply chains, and communities toward a
   sustainable future. Although many of the articles explored in this
   review report on existing urgent environmental and social issues, their
   findings, recommendations, and contributions are encouraging as we make
   progress toward a sustainable society through innovation and change.
   This article reviews the diversity of innovation for Sustainable
   Development in the literature, proposes a typology of such a phenomenon,
   provides an overview of key articles based on the primary subjects they
   address, and identifies a series of recommendations for the future
