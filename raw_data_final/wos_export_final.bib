@article{ ISI:000453529800037,
Author = {Moritz, Mark and Behnke, Roy and Beitl, Christine M. and Bird, Rebecca
   Bliege and Chiaravalloti, Rafael Morais and Clark, Julia K. and
   Crabtree, Stefani A. and Downey, Sean S. and Hamilton, Ian M. and Phang,
   Sui Chian and Scholte, Paul and Wilson, James A.},
Title = {{Emergent sustainability in open property regimes}},
