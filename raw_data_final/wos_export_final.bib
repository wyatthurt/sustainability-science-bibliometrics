@article{ ISI:000458423900004,
Author = {Baird, Julia and Plummer, Ryan and Schultz, Lisen and Armitage, Derek
   and Bodin, Orjan},
Title = {{How Does Socio-institutional Diversity Affect Collaborative Governance
