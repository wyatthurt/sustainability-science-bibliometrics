	journal = {Regional Environmental Change},
	author = {Pérez-Soba, Marta and Paterson, James and Metzger, Marc J. and Gramberger, Marc and Houtkamp, Joske and Jensen, Anne and Murray-Rust, Dave and Verkerk, Pieter J.},
