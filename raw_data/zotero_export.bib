	keywords = {complex adaptive systems, governance, collective action, advocacy coalition framework, baltic sea, climate-change policy, environmental-policy, forest policy, Framework, Policy change, Policy process, protected area   policy, punctuated equilibrium, Social-ecological system, water policy},
	pages = {13--25}
}

