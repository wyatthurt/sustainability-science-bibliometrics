	file = {Carr - Preprint Accepted by World Development, 18 May 20.pdf:/Users/wyatthurt/Zotero/storage/F673R3MD/Carr - Preprint Accepted by World Development, 18 May 20.pdf:application/pdf;ScienceDirect Full Text PDF:/Users/wyatthurt/Zotero/storage/MDU8MNMM/Carr - 2019 - Properties and projects Reconciling resilience an.pdf:application/pdf;ScienceDirect Snapshot:/Users/wyatthurt/Zotero/storage/MPQCQNNR/S0305750X19301251.html:text/html}
